@page "/hr/setting/position/create"
@page "/hr/setting/position/update/{Id:long}"

<AuthorizeView Context="Auth">
    <Authorized>
        <HRMPanel Title="@pageTitle">
            <ButtonGroup>
                <Button Type="@ButtonType.Primary" OnClick="@OnSubmitClick">Lưu</Button>
                <Button Type="@ButtonType.Default" OnClick="@BackToTheListClick">Danh sách</Button>
            </ButtonGroup>
            <PanelContent>
                <Spin Spinning="@pageLoading">
                    <Form @ref="@form" Model="@model" OnFinish="@OnFinish">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-1">
                                    <label>Tên phòng chức vụ</label>
                                    <FormItem>
                                        <Input @bind-Value="@model.Name" class="form-control" MaxLength="200" tabindex="1" />
                                    </FormItem>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-1">
                                    <label>Ghi chú</label>
                                    <FormItem>
                                        <Input @bind-Value="@model.Description" class="form-control" MaxLength="255" tabindex="2" />
                                    </FormItem>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-12 col-xs-12">
                                <div class="mb-1">
                                    <label>Sử dụng</label>
                                    <FormItem>
                                        <Checkbox @bind-Value="@model.IsActive" class="form-check-input" tabindex="3" />
                                    </FormItem>
                                </div>
                            </div>
                        </div>
                    </Form>
                </Spin>
            </PanelContent>
        </HRMPanel>
    </Authorized>
    <NotAuthorized>
        <HrmNotAuthorize />
    </NotAuthorized>
</AuthorizeView>
